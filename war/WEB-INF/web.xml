<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5">
	<servlet>
		<servlet-name>FeedAggregator</servlet-name>
		<servlet-class>com.fromdev.automation.feed.FeedAggregatorServlet
		</servlet-class>
		<init-param>
			<param-name>feedUrl</param-name>
			<param-value>https://raw.githubusercontent.com/fromdev/fromdev-static/gh-pages/release/java-feeds.txt</param-value>
		</init-param>
		<init-param>
			<param-name>feedList</param-name>
			<param-value>
				http://feeds.feedburner.com/Javarevisited
http://javapapers.com/feed/
http://www.programcreek.com/feed/
http://www.mkyong.com/feed/
https://javax0.wordpress.com/feed/
http://howtodoinjava.com/feed/
http://www.fromdev.com/feeds/posts/default/-/Java
http://vanillajava.blogspot.com/feeds/posts/default
http://feeds.feedburner.com/JavaCodeGeeks
http://feeds.dzone.com/java
http://spring.io/blog/category/engineering.atom
http://beginnersbook.com/feed/
http://feeds.feedburner.com/JavaByNatarajSir
http://feeds.feedburner.com/Java67	
			</param-value>
		</init-param>
	</servlet>
	<servlet>
		<servlet-name>FeedOnBufferEmpty</servlet-name>
		<servlet-class>com.fromdev.automation.feed.FeedOnBufferEmptyServlet
		</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>FeedCache</servlet-name>
		<servlet-class>com.fromdev.automation.feed.FeedCacheServlet
		</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>JsonCache</servlet-name>
		<servlet-class>com.fromdev.automation.feed.JsonCacheServlet
		</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>KeepAlive</servlet-name>
		<servlet-class>com.fromdev.automation.feed.KeepAliveServlet
		</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>FeedAggregator</servlet-name>
		<url-pattern>/feedrandomizer</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>FeedOnBufferEmpty</servlet-name>
		<url-pattern>/feedonbufferempty</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>FeedCache</servlet-name>
		<url-pattern>/cron/feedcache</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>JsonCache</servlet-name>
		<url-pattern>/admin/jsoncache</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>KeepAlive</servlet-name>
		<url-pattern>/cron/keepalive</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
	<security-constraint>
		<web-resource-collection>
			<web-resource-name>admin</web-resource-name>
			<url-pattern>/cron/*</url-pattern>
			<url-pattern>/admin/*</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>admin</role-name>
		</auth-constraint>
	</security-constraint>
</web-app>
