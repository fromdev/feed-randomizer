<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5">
	<servlet>
		<servlet-name>FeedRandomizer</servlet-name>
		<servlet-class>com.fromdev.automation.feed.FeedRandomizerServlet
		</servlet-class>
		<init-param>
			<param-name>feedList</param-name>
			<param-value>
					http://feeds.feedburner.com/Quicksprout
					http://www.socialmediaexaminer.com/feed/
					http://feeds.feedburner.com/mozblog
					http://feeds.searchengineland.com/searchengineland
					http://feeds.searchenginejournal.com/SearchEngineJournal
					http://searchenginewatch.com/rss
					http://feeds.seroundtable.com/SearchEngineRoundtable1
					http://www.seocentro.com/feeds/seocentro.xml
					http://feeds.feedburner.com/seobythesea/Tesr
					http://feeds.marketingpilgrim.com/marketing-pilgrim
					http://www.seobook.com/index.rdf
					http://searchenginewatch.com/rss
					http://feeds.copyblogger.com/copyblogger
					http://seogadget.com/feed/
			</param-value>
		</init-param>
	</servlet>
	<servlet>
		<servlet-name>FeedOnBufferEmpty</servlet-name>
		<servlet-class>com.fromdev.automation.feed.FeedOnBufferEmptyServlet
		</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>FeedCache</servlet-name>
		<servlet-class>com.fromdev.automation.feed.FeedCacheServlet
		</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>JsonCache</servlet-name>
		<servlet-class>com.fromdev.automation.feed.JsonCacheServlet
		</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>KeepAlive</servlet-name>
		<servlet-class>com.fromdev.automation.feed.KeepAliveServlet
		</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>FeedRandomizer</servlet-name>
		<url-pattern>/feedrandomizer</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>FeedOnBufferEmpty</servlet-name>
		<url-pattern>/feedonbufferempty</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>FeedCache</servlet-name>
		<url-pattern>/cron/feedcache</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>JsonCache</servlet-name>
		<url-pattern>/admin/jsoncache</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>KeepAlive</servlet-name>
		<url-pattern>/cron/keepalive</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
	<security-constraint>
		<web-resource-collection>
			<web-resource-name>admin</web-resource-name>
			<url-pattern>/cron/*</url-pattern>
			<url-pattern>/admin/*</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>admin</role-name>
		</auth-constraint>
	</security-constraint>
</web-app>
